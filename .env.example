# Pricewatch Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# REQUIRED IN PRODUCTION
# =============================================================================

# Secret key for session/token signing (minimum 32 characters)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=your-secret-key-change-in-production-minimum-32-characters

# Encryption key for sensitive data (Fernet key)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# REQUIRED in production - optional in development (auto-generated if not set)
ENCRYPTION_KEY=

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (set to false in production)
DEBUG=false

# =============================================================================
# DATABASE
# =============================================================================

# Database connection URL
DATABASE_URL=sqlite:///pricewatch.db

# =============================================================================
# SECURITY
# =============================================================================

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# SCRAPING
# =============================================================================

REQUEST_TIMEOUT=30
MAX_RETRIES=3
USE_JS_FALLBACK=false
SCHEDULE_MINUTES=30

# =============================================================================
# LOGGING
# =============================================================================

LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# EMAIL NOTIFICATIONS (Optional)
# =============================================================================

SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=

# =============================================================================
# SMS NOTIFICATIONS (Optional)
# =============================================================================

TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
