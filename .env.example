# =============================================================================
# Pricewatch Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment.
# 
# IMPORTANT: Never commit your actual .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Environment: development | staging | production
ENVIRONMENT=development

# Debug mode (set to false in production)
DEBUG=false

# Secret key for session signing (REQUIRED in production)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=your-secret-key-change-in-production-minimum-64-characters-long

# Encryption key for sensitive data like SMTP passwords (REQUIRED in production)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# SQLite (default for development)
DATABASE_URL=sqlite:///pricewatch.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/pricewatch

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
# Maximum requests per minute per IP
RATE_LIMIT_PER_MINUTE=60

# Burst limit for rate limiting
RATE_LIMIT_BURST=10

# -----------------------------------------------------------------------------
# Web Scraping Configuration
# -----------------------------------------------------------------------------
# Request timeout in seconds
REQUEST_TIMEOUT=30

# Maximum retry attempts for failed requests
MAX_RETRIES=3

# Enable JavaScript rendering fallback (requires Playwright)
USE_JS_FALLBACK=false

# Price polling interval in minutes
SCHEDULE_MINUTES=30

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log level: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=INFO

# Log format: json | standard
LOG_FORMAT=json

# -----------------------------------------------------------------------------
# Email Notifications (Optional)
# -----------------------------------------------------------------------------
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=alerts@example.com

# -----------------------------------------------------------------------------
# SMS Notifications via Twilio (Optional)
# -----------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# -----------------------------------------------------------------------------
# Monitoring (Optional)
# -----------------------------------------------------------------------------
ENABLE_METRICS=false
METRICS_PORT=9090
